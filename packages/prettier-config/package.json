{
  "name": "@xstools-dev/prettier-config",
  "version": "0.15.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bingtsingw/xstools-dev.git",
    "directory": "packages/prettier-config"
  },
  "license": "MIT",
  "exports": {
    "./base": {
      "types": "./src/base.ts",
      "default": "./dist/base.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "check-type": "tsc --noEmit",
    "dev": "tsup --watch",
    "lint:js": "eslint . --cache --ext .js,.jsx,.ts,.tsx",
    "lint:js:fix": "eslint . --cache --ext .js,.jsx,.ts,.tsx --fix"
  },
  "eslintConfig": {
    "extends": "@xstools-dev/eslint-config/base"
  },
  "dependencies": {
    "prettier": "~3.7.4",
    "prettier-plugin-multiline-arrays": "4.1.3",
    "prettier-plugin-organize-imports": "4.3.0",
    "prettier-plugin-packagejson": "2.5.21",
    "prettier-plugin-prisma": "5.0.0",
    "prettier-plugin-tailwindcss": "0.6.12"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "tsup": {
    "entry": [
      "src/**/*.ts"
    ],
    "format": [
      "cjs"
    ],
    "clean": true,
    "minify": true
  }
}
