{
  "name": "@xstools-dev/eslint-config",
  "version": "0.18.3",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bingtsingw/xstools-dev.git",
    "directory": "packages/eslint-config"
  },
  "license": "MIT",
  "exports": {
    "./base": {
      "types": "./src/base.ts",
      "default": "./dist/base.js"
    },
    "./taro": {
      "types": "./src/taro.ts",
      "default": "./dist/taro.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "check-type": "tsc --noEmit",
    "dev": "tsup --watch",
    "lint:js": "eslint . --cache --ext .js,.jsx,.ts,.tsx",
    "lint:js:fix": "eslint . --cache --ext .js,.jsx,.ts,.tsx --fix"
  },
  "eslintConfig": {
    "extends": "@xstools-dev/eslint-config/base"
  },
  "dependencies": {
    "@babel/core": "~7.29.0",
    "@babel/eslint-parser": "~7.28.6",
    "@babel/preset-react": "~7.28.5",
    "@typescript-eslint/eslint-plugin": "~8.54.0",
    "@typescript-eslint/parser": "~8.54.0",
    "eslint": "~8.57.1",
    "eslint-config-alloy": "~5.1.2",
    "eslint-config-prettier": "~10.1.8",
    "eslint-config-taro": "~3.6.38",
    "eslint-plugin-import": "~2.32.0",
    "eslint-plugin-prettier": "~5.5.5",
    "eslint-plugin-react": "~7.37.5",
    "eslint-plugin-react-hooks": "~7.0.1",
    "eslint-plugin-react-refresh": "0.4.26",
    "eslint-plugin-tailwindcss": "~3.18.2"
  },
  "devDependencies": {
    "@types/eslint": "^8.56.12",
    "tailwindcss": "^3.4.19"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "tsup": {
    "entry": [
      "src/**/*.ts"
    ],
    "format": [
      "cjs"
    ],
    "clean": true,
    "minify": true
  }
}
