{
  "name": "@xstools-dev/tools-script",
  "version": "0.18.0",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "del": "./bin/del.js",
    "dotenvx": "./bin/dotenvx.js",
    "malagu": "./bin/malagu.js",
    "miniprogram-ci": "./bin/miniprogram-ci.js",
    "port-client": "./bin/port-client.js",
    "tsup": "./bin/tsup.js",
    "wesvg": "./bin/wesvg.js"
  },
  "files": [
    "bin",
    "src",
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "check-type": "tsc --noEmit",
    "dev": "tsup --watch",
    "lint:js": "eslint . --cache --ext .js,.jsx,.ts,.tsx",
    "lint:js:fix": "eslint . --cache --ext .js,.jsx,.ts,.tsx --fix",
    "test": "bun test"
  },
  "eslintConfig": {
    "extends": "@xstools-dev/eslint-config/base"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "1.51.0",
    "@malagu/cli": "2.60.3",
    "@wesvg/cli": "^0.4.0",
    "babel-plugin-import": "~1.13.8",
    "chokidar": "~4.0.3",
    "del-cli": "~7.0.0",
    "miniprogram-ci": "~2.1.26",
    "port-client": "^1.4.5",
    "tsup": "~8.5.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "tsup": {
    "entry": [
      "src/**/*.ts"
    ],
    "format": [
      "esm"
    ],
    "dts": true,
    "clean": true,
    "minify": true
  }
}
