{
  "name": "@xstools-dev/tools-script",
  "version": "0.9.0",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "del": "./bin/del.js",
    "detect-port": "./bin/detect-port.js",
    "dotenv": "./bin/dotenv.js",
    "dotenvx": "./bin/dotenvx.js",
    "fkill": "./bin/fkill.js",
    "malagu": "./bin/malagu.js",
    "miniprogram-ci": "./bin/miniprogram-ci.js",
    "tsup": "./bin/tsup.js",
    "wesvg": "./bin/wesvg.js"
  },
  "files": [
    "bin",
    "src",
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "check-type": "tsc --noEmit",
    "dev": "tsup --watch",
    "lint:js": "eslint . --cache --ext .js,.jsx,.ts,.tsx",
    "lint:js:fix": "eslint . --cache --ext .js,.jsx,.ts,.tsx --fix"
  },
  "eslintConfig": {
    "extends": "@xstools-dev/eslint-config/base"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "~1.6.4",
    "@malagu/cli": "2.58.0",
    "@wesvg/cli": "^0.2.0",
    "babel-plugin-import": "~1.13.8",
    "chokidar": "~3.6.0",
    "del-cli": "~5.1.0",
    "detect-port": "~1.6.1",
    "dotenv": "~16.4.5",
    "dotenv-cli": "~7.4.2",
    "dotenv-expand": "~11.0.6",
    "fkill-cli": "~8.0.0",
    "miniprogram-ci": "~2.0.8",
    "tsup": "~8.2.3"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "tsup": {
    "entry": [
      "src/**/*.ts"
    ],
    "format": [
      "esm"
    ],
    "dts": true,
    "clean": true,
    "minify": true
  }
}
